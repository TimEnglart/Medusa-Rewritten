{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "./lib/",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"removeComments": true,
		"strict": true,
		"baseUrl": "src",
		"paths": {
			"@extensions/*": ["ext/*"],
			"@commands/*": ["cmds/*"],
			"@configuration/*": ["config/*"],
			"@vue-client/*": ["../client/*"],
			"@vue-public/*": ["../public/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"],
	"compileOnSave": true
}