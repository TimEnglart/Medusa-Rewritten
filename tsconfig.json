{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "./lib/",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"removeComments": true,
		"strict": true,
		"baseUrl": "src",
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"],
	"compileOnSave": true
}